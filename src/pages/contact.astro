---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Office locations
const locations = [
  {
    name: 'New Haven Office',
    address: '123 Church Street, Suite 400',
    city: 'New Haven, CT 06510',
    phone: '(203) 555-0123',
    hours: 'Mon-Fri: 9:00 AM - 5:00 PM'
  }
];

// Consultation times
const consultationTimes = [
  '9:00 AM', '9:30 AM', '10:00 AM', '10:30 AM', '11:00 AM', '11:30 AM',
  '1:00 PM', '1:30 PM', '2:00 PM', '2:30 PM', '3:00 PM', '3:30 PM', '4:00 PM'
];

// Services for dropdown
const serviceOptions = [
  'Monthly Bookkeeping',
  'Tax Preparation',
  'QuickBooks Setup/Training',
  'Payroll Services',
  'Catch-up Bookkeeping',
  'Business Advisory',
  'Not Sure - Need Guidance'
];
---

<BaseLayout title="Contact Us">
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-navy-700 to-navy-800 text-white py-20">
    <div class="container-narrow text-center">
      <h1 class="text-4xl md:text-5xl font-serif mb-6 text-white drop-shadow-lg animate-slide-up">
        Let's Get Your Finances in Order
      </h1>
      <p class="text-xl text-gray-100 max-w-3xl mx-auto drop-shadow animate-fade-in">
        Schedule a free consultation or reach out with questions. 
        We're here to help Connecticut businesses thrive.
      </p>
    </div>
  </section>

  <!-- Contact Options -->
  <section class="py-12 bg-gray-50 border-b border-gray-200">
    <div class="container-narrow">
      <div class="grid md:grid-cols-3 gap-8 text-center">
        <div class="animate-scale-in">
          <div class="w-16 h-16 bg-gold-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-navy-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-navy-800 mb-2">Call Us</h3>
          <p class="text-gray-600">(203) 555-0123</p>
          <p class="text-sm text-gray-500">Mon-Fri 9AM-5PM EST</p>
        </div>
        
        <div class="animate-scale-in" style="animation-delay: 0.1s">
          <div class="w-16 h-16 bg-gold-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-navy-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-navy-800 mb-2">Email Us</h3>
          <p class="text-gray-600">info@ctprobookkeeping.com</p>
          <p class="text-sm text-gray-500">Response within 24 hours</p>
        </div>
        
        <div class="animate-scale-in" style="animation-delay: 0.2s">
          <div class="w-16 h-16 bg-gold-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-navy-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-navy-800 mb-2">Live Chat</h3>
          <p class="text-gray-600">Available 9AM-5PM</p>
          <p class="text-sm text-gray-500">Instant answers</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Contact Form and Booking -->
  <section class="section-padding">
    <div class="container-narrow">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="animate-slide-up">
          <h2 class="text-2xl md:text-3xl font-serif text-navy-800 mb-6">Send Us a Message</h2>
          <p class="text-gray-600 mb-8">
            Have a question or ready to get started? Fill out the form below and we'll get back to you within one business day.
          </p>
          
          <form name="contact" method="POST" data-netlify="true" class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                  First Name <span class="text-red-500">*</span>
                </label>
                <input 
                  type="text" 
                  id="firstName" 
                  name="firstName" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-transparent"
                />
              </div>
              
              <div>
                <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                  Last Name <span class="text-red-500">*</span>
                </label>
                <input 
                  type="text" 
                  id="lastName" 
                  name="lastName" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-transparent"
                />
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email <span class="text-red-500">*</span>
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-transparent"
              />
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                Phone Number
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-transparent"
              />
            </div>
            
            <div>
              <label for="businessName" class="block text-sm font-medium text-gray-700 mb-2">
                Business Name
              </label>
              <input 
                type="text" 
                id="businessName" 
                name="businessName"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-transparent"
              />
            </div>
            
            <div>
              <label for="service" class="block text-sm font-medium text-gray-700 mb-2">
                Service Interested In
              </label>
              <select 
                id="service" 
                name="service"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-transparent"
              >
                <option value="">Select a service...</option>
                {serviceOptions.map((service) => (
                  <option value={service}>{service}</option>
                ))}
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                Message <span class="text-red-500">*</span>
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="4"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gold-500 focus:border-transparent"
                placeholder="Tell us about your bookkeeping needs..."
              ></textarea>
            </div>
            
            <button type="submit" class="btn-gold w-full">
              Send Message
            </button>
          </form>
        </div>

        <!-- Consultation Booking -->
        <div class="animate-slide-up" style="animation-delay: 0.1s">
          <div class="bg-navy-800 text-white p-8 rounded-lg shadow-xl">
            <h2 class="text-2xl md:text-3xl font-serif mb-6 text-white">Book a Free Consultation</h2>
            <p class="text-gray-200 mb-8">
              Get personalized advice for your business in a free 30-minute consultation. 
              No obligation, just helpful guidance.
            </p>
            
            <div class="space-y-6">
              <div>
                <h3 class="text-lg font-bold mb-4 text-white">What to Expect:</h3>
                <ul class="space-y-3 text-gray-200">
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-gold-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Review of your current bookkeeping situation
                  </li>
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-gold-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Identification of potential tax savings
                  </li>
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-gold-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Custom recommendations for your business
                  </li>
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-gold-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Clear pricing and next steps
                  </li>
                </ul>
              </div>
              
              <div class="bg-white/10 p-6 rounded-lg">
                <h4 class="text-lg font-bold mb-4 text-white">Quick Booking</h4>
                <p class="text-gray-200 mb-4">Call us directly to schedule:</p>
                <a href="tel:2035550123" class="btn-gold w-full text-center inline-block">
                  <span class="flex items-center justify-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    (203) 555-0123
                  </span>
                </a>
              </div>
              
              <div class="text-center text-gray-300 text-sm">
                <p>Or use the contact form to request a specific time</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Office Location -->
  <section class="section-padding bg-gray-50">
    <div class="container-narrow">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-serif text-navy-800 mb-4">Visit Our Office</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Prefer to meet in person? Stop by our New Haven office for a face-to-face consultation.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12 items-start">
        {locations.map((location) => (
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <h3 class="text-xl font-bold text-navy-800 mb-6">{location.name}</h3>
            <div class="space-y-4">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-gold-500 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <div>
                  <p class="text-gray-700">{location.address}</p>
                  <p class="text-gray-700">{location.city}</p>
                </div>
              </div>
              
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gold-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <p class="text-gray-700">{location.phone}</p>
              </div>
              
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gold-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <p class="text-gray-700">{location.hours}</p>
              </div>
              
              <div class="pt-4 border-t">
                <a 
                  href={`https://maps.google.com/?q=${encodeURIComponent(location.address + ' ' + location.city)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-navy-600 font-medium hover:text-navy-800 flex items-center"
                >
                  Get Directions
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
        
        <!-- Map Placeholder -->
        <div class="bg-gray-300 rounded-lg shadow-lg h-full min-h-[400px] flex items-center justify-center">
          <div class="text-center text-gray-600">
            <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
            </svg>
            <p>Interactive Map</p>
            <p class="text-sm">123 Church Street, New Haven</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>