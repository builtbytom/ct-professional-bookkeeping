---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Import content from CMS
import heroContent from '../content/homepage/hero.json';
import trustContent from '../content/homepage/trust.json';

// Service data
const services = [
  {
    icon: 'ðŸ“Š',
    title: 'Monthly Bookkeeping',
    description: 'Keep your books accurate and up-to-date with our comprehensive monthly bookkeeping services.',
    features: ['Transaction categorization', 'Bank reconciliation', 'Financial reporting', 'Expense tracking']
  },
  {
    icon: 'ðŸ“‹',
    title: 'Tax Preparation',
    description: 'Expert tax preparation that maximizes deductions and ensures compliance with all regulations.',
    features: ['Business tax returns', 'Tax planning', 'Quarterly estimates', 'IRS representation']
  },
  {
    icon: 'ðŸ’»',
    title: 'QuickBooks Setup',
    description: 'Get your QuickBooks running smoothly with professional setup and ongoing support.',
    features: ['Software setup', 'Chart of accounts', 'Training sessions', 'Ongoing support']
  },
  {
    icon: 'ðŸ’°',
    title: 'Payroll Services',
    description: 'Accurate, timely payroll processing that keeps your employees happy and the IRS satisfied.',
    features: ['Payroll processing', 'Tax withholding', 'Direct deposit', 'Year-end forms']
  }
];

// Testimonials
const testimonials = [
  {
    name: 'Sarah Mitchell',
    business: 'Mitchell Design Studio',
    quote: 'Connecticut Professional Bookkeeping transformed our financial chaos into clarity. Now I can focus on growing my business instead of drowning in receipts.',
    service: 'Monthly Bookkeeping'
  },
  {
    name: 'Robert Chen',
    business: 'New Haven Pizza Co.',
    quote: 'They saved us $15,000 in taxes last year alone. Worth every penny and then some!',
    service: 'Tax Preparation'
  },
  {
    name: 'Lisa Thompson',
    business: 'Thompson Law Associates',
    quote: 'The QuickBooks training was exactly what we needed. Our billing is now streamlined and professional.',
    service: 'QuickBooks Setup'
  }
];
---

<BaseLayout title="Home">
  <Header />
  
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-navy-700 to-navy-800 text-white overflow-hidden">
    <div class="container-narrow section-padding relative z-10">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="animate-slide-up">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif mb-6 text-balance text-white drop-shadow-lg">
            {heroContent.title}
          </h1>
          <p class="text-xl text-gray-100 mb-8 leading-relaxed drop-shadow">
            {heroContent.subtitle}
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href={heroContent.buttonLink} class="btn-gold inline-block text-center shadow-lg hover:shadow-xl">
              {heroContent.buttonText}
            </a>
            <a href="tel:2035550123" class="btn-secondary inline-block text-center bg-white/95 backdrop-blur-sm shadow-lg hover:shadow-xl hover:bg-white">
              Call (203) 555-0123
            </a>
          </div>
        </div>
        <div class="relative animate-fade-in hidden md:block">
          <div class="absolute inset-0 bg-gold-500/30 blur-3xl"></div>
          <img 
            src="https://images.unsplash.com/photo-1554224155-6726b3ff858f?w=800&q=80" 
            alt="Professional bookkeeping services"
            class="relative rounded-lg shadow-2xl"
          />
        </div>
      </div>
    </div>
    <!-- Background pattern for better readability -->
    <div class="absolute inset-0 bg-gradient-to-br from-navy-900/50 to-navy-800/30 z-0"></div>
    <!-- Decorative wave -->
    <div class="absolute bottom-0 left-0 right-0 z-10">
      <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0V120Z" fill="white"/>
      </svg>
    </div>
  </section>

  <!-- Trust Signals -->
  <section class="py-16 bg-gray-50 border-b border-gray-200">
    <div class="container-narrow">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="animate-scale-in">
          <div class="text-3xl md:text-4xl font-bold text-navy-800">{trustContent.years}</div>
          <div class="text-gray-600 mt-2">Years in Business</div>
        </div>
        <div class="animate-scale-in" style="animation-delay: 0.1s">
          <div class="text-3xl md:text-4xl font-bold text-navy-800">{trustContent.clients}+</div>
          <div class="text-gray-600 mt-2">Happy Clients</div>
        </div>
        <div class="animate-scale-in" style="animation-delay: 0.2s">
          <div class="text-3xl md:text-4xl font-bold text-navy-800">{trustContent.savings}</div>
          <div class="text-gray-600 mt-2">Saved in Taxes</div>
        </div>
        <div class="animate-scale-in" style="animation-delay: 0.3s">
          <div class="text-3xl md:text-4xl font-bold text-navy-800">100%</div>
          <div class="text-gray-600 mt-2">Accuracy Rate</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="section-padding">
    <div class="container-narrow">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-serif mb-4">Our Services</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          From day-to-day bookkeeping to complex tax strategies, we provide comprehensive financial services tailored to Connecticut businesses.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        {services.map((service, index) => (
          <div class="card hover:shadow-xl transition-all duration-300 animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
            <div class="flex items-start space-x-4">
              <div class="text-4xl">{service.icon}</div>
              <div class="flex-1">
                <h3 class="text-xl font-bold mb-3">{service.title}</h3>
                <p class="text-gray-600 mb-4">{service.description}</p>
                <ul class="space-y-2">
                  {service.features.map((feature) => (
                    <li class="flex items-center text-sm text-gray-700">
                      <svg class="w-4 h-4 text-gold-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
                <a href="/services" class="inline-flex items-center text-navy-600 font-medium mt-4 hover:text-navy-800 transition-colors">
                  Learn more
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="section-padding bg-navy-800 text-white">
    <div class="container-narrow">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-serif mb-6 text-white">Why Connecticut Businesses Choose Us</h2>
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gold-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-navy-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-2 text-white">Local Expertise</h3>
                <p class="text-gray-300">Deep understanding of Connecticut tax laws and business regulations specific to New Haven County.</p>
              </div>
            </div>
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gold-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-navy-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-2 text-white">Always Available</h3>
                <p class="text-gray-300">Questions don't wait for business hours. Get answers when you need them with our responsive support.</p>
              </div>
            </div>
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gold-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-navy-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-2 text-white">Technology Forward</h3>
                <p class="text-gray-300">Modern tools and software integration that saves time and reduces errors in your financial management.</p>
              </div>
            </div>
          </div>
        </div>
        <div class="relative">
          <img 
            src="https://images.unsplash.com/photo-1556761175-4b46a572b786?w=800&q=80" 
            alt="Professional team meeting"
            class="rounded-lg shadow-2xl"
          />
          <div class="absolute -bottom-6 -right-6 bg-gold-500 text-navy-800 p-6 rounded-lg shadow-xl">
            <div class="text-3xl font-bold">{trustContent.certifications.length}+</div>
            <div class="text-sm">Professional Certifications</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="section-padding bg-gray-50">
    <div class="container-narrow">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-serif mb-4">What Our Clients Say</h2>
        <p class="text-xl text-gray-600">Real results from real Connecticut businesses</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {testimonials.map((testimonial, index) => (
          <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
            <div class="flex mb-4">
              {[...Array(5)].map(() => (
                <svg class="w-5 h-5 text-gold-500" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              ))}
            </div>
            <p class="text-gray-700 mb-4 italic">"{testimonial.quote}"</p>
            <div class="border-t pt-4">
              <div class="font-bold text-navy-800">{testimonial.name}</div>
              <div class="text-sm text-gray-600">{testimonial.business}</div>
              <div class="text-xs text-gold-600 mt-1">{testimonial.service}</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-gradient-to-r from-navy-800 to-navy-900 text-white">
    <div class="container-narrow text-center">
      <h2 class="text-3xl md:text-4xl font-serif mb-6 text-white">Ready to Get Your Finances in Order?</h2>
      <p class="text-xl text-gray-200 mb-8 max-w-2xl mx-auto">
        Join hundreds of Connecticut businesses who trust us with their bookkeeping. 
        Get a free consultation and see how we can help you save time and money.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn-gold inline-block">Schedule Free Consultation</a>
        <a href="/resources" class="btn-secondary inline-block">Download Tax Checklist</a>
      </div>
      <p class="text-sm text-gray-300 mt-6">
        No commitment required. Free 30-minute consultation.
      </p>
    </div>
  </section>

  <Footer />
</BaseLayout>