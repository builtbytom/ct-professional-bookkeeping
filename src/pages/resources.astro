const webinars = [
  {
    title: 'Year-End Tax Planning for CT Businesses',
    date: 'December 15, 2024',
    time: '2:00 PM EST',
    duration: '60 minutes',
    topics: ['Last-minute deductions', '2025 tax changes', 'Q&A with our tax experts']
  },
